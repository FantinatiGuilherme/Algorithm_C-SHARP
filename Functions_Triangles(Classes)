using System;

public class Task
{
    public double leia()
    {
        double x = double.Parse(Console.ReadLine());

        return x;
    }  


    public bool formacao(double x, double y, double z)
    {
        return (x + y > z && y + z > x && x + z > y);
    }

    public void Tipo(double x, double y, double z)
    {
        //Console.WriteLine("Teste");
        if (x == y && y == z)
        {
            Console.WriteLine("Esse é um triâgulo Equilatero");
        }
        else
        {
            if(x == y || y == z)
            {
                Console.WriteLine("Esse é um triâgulo Isosceles");
            }
            else
            {
                Console.WriteLine("Esse é um triâgulo Escaleno");
            }
        }

    }
}
